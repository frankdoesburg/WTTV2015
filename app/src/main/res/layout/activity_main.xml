<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border_background"
                android:orientation="vertical"
                android:padding="30dp">

                <com.frankd.wttv.CustomFontTextView
                    android:id="@+id/newsTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nieuws"
                    customAttrs:customFont="OSWALD_REGULAR"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/artists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border_background"
                android:orientation="vertical"
                android:padding="30dp">

                <com.frankd.wttv.CustomFontTextView
                    android:id="@+id/artistTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acts"
                    customAttrs:customFont="OSWALD_REGULAR"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/timetable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border_background"
                android:orientation="vertical"
                android:padding="30dp">

                <com.frankd.wttv.CustomFontTextView
                    android:id="@+id/timetableTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blokkenschema"
                    customAttrs:customFont="OSWALD_REGULAR"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/favorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border_background"
                android:orientation="vertical"
                android:padding="30dp">

                <com.frankd.wttv.CustomFontTextView
                    android:id="@+id/favoritesTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorieten"
                    customAttrs:customFont="OSWALD_REGULAR"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
