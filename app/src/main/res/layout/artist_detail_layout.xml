<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customAttrs="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vegetable_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tomdoesburg.kooktijden.vegetables.VegetableDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.frankd.wttv.CustomFontTextView
                android:id="@+id/artistNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:paddingBottom="50dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="50dp"
                android:text="title"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                customAttrs:customFont="OSWALD_REGULAR"
                 />

            <ImageButton
                android:id="@+id/timer_button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/artistNameTV"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="-40dp"
                android:background="@drawable/circle"
                android:src="@mipmap/heart_open"
                android:paddingBottom="18dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="22dp"
                android:scaleType="fitCenter"
                />

            <com.frankd.wttv.CustomFontTextView
                android:id="@+id/timeDayTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/artistNameTV"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text="Vrijdag 14:00 podium Zuid"
                android:textAppearance="?android:attr/textAppearanceMedium"
                customAttrs:customFont="OSWALD_REGULAR"/>

            <com.frankd.wttv.CustomFontTextView
                android:id="@+id/descriptionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeDayTV"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                customAttrs:customFont="OSWALD_REGULAR"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>