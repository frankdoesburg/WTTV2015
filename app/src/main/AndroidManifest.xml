<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.frankd.wttv" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewsDetailActivity"
            android:label="News"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ArtistListActivity"
            android:label="@string/acts"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ArtistDetailActivity"
            android:label="@string/acts"
            android:parentActivityName=".ArtistListActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".TimetableActivity"
            android:label="@string/timetable"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MapActivity"
            android:label="@string/map"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".FavoritesActivity"
            android:label="@string/favorites"
            android:screenOrientation="portrait" >
        </activity>
        <receiver android:name=".AlarmReceiver">
            <intent-filter>
                <action android:name="INTENT_ACTION"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".AlarmSetter" >
            <intent-filter>
                <action
                    android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
